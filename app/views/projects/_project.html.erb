<div class="col-md-4 col-sm-6 col-xs-12">
  <div class="project-box">
    <%= link_to image_tag(project.image_url, alt: project.name, width: '100%',height: '200px'), project_path(project) %>
    <div class="description-box">
      <div class="title">
        <%= link_to project.name, project_path(project) %>
      </div>
      <div class="description">
        <%= raw project.short_description %>
      </div>
      <div class="project-bar">
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
            <span class="sr-only">40% Complete (success)</span>
          </div>
        </div>
      </div>
      <div class="stats">
        <ul>
          <li>88% <br><span class="label">funded</span></li>
          <li>$10,700 <br><span class="label">pledged</span></li>
          <li>14 <br><span class="label">days to go</span></li>
        </ul>
      </div>
    </div>
  </div>
</div>
